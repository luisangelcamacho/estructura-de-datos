// estructuras1.cpp: define el punto de entrada de la aplicaci√≥n de consola.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;
void main()
{  int n,r,in;
   in=0;
   cout<< "ingrese el numero"<<endl;
   cin>>n;
   while(n>0)
   {  r=n%10;
      n=n/10;
      in=in*10+r;
   }
   cout<<"el numero invertido es :"<<in<<endl;
   getch();
}
