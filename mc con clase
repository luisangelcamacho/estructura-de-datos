#include "mcd.h"
#include <iostream>
void divisor(int x, int y);
using namespace std;
void main()
{ mcd mcd1;
 int a,b,x,y;
 do{
  cout<<" ingrese a "<<endl;
  cin>> a;
  }while(a<=0);
  do{
  cout<<" ingrese b "<<endl;
  cin>> b;
  while(b<=0);
  if (a>b)
  { x=a;
    y=b;
  }
  else 
  { x=b;
    y=a;
   }
mcd1.divisor(x,y);

getch();
}
