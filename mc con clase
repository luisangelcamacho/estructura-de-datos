#pragma once
class mcd
{private:
int a,b;
public:
	mcd(void);
	~mcd(void);
	void divisor(int x,int y);
};

////////////////////////////////////
#include "StdAfx.h"
#include "mcd.h"
#include "iostream"
using namespace std;

mcd::mcd(void)
{ a=0;
  b=0;
}


mcd::~mcd(void)
{
}
void mcd::divisor(int x,int y)
{ 
  do 
  { b=y;
	  y=x%y;
    x=b;
  }while(y>0);
cout<<" MCD = "<<b;
}

