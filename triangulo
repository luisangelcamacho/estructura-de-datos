triangulo.h
#pragma once
class triangulo
{
private:
	float base;
	float altura;
	float area;

public:
	triangulo(void);
	~triangulo(void);
	float calculararea(float b,float h);
};

triangulo.cpp
#include "StdAfx.h"
#include "triangulo.h"


triangulo::triangulo(void)
{
}


triangulo::~triangulo(void)
{
}
float triangulo::calculararea(float b, float h)
{
	area=(b*h)/2;
		return area;
}

triangular.cpp
#include "stdafx.h"
